<VBox fx:controller="com.no.loliSnatcher.SearchController" prefWidth="800" prefHeight="600"
      xmlns:fx="http://javafx.com/fxml" alignment="center"
          >
<padding><Insets top="40" right="40" bottom="40" left="40"/></padding>
    <HBox prefWidth="800">
        <TextField fx:id="searchField" prefHeight="40" prefWidth="500"/>
        <Button fx:id="searchButton" text="Search" prefHeight="40" onAction="#processSearch"></Button>
        <Button fx:id="snatchButton" text="Snatch" prefHeight="40" onAction="#snatcherWindowLoader"></Button>
